{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "log:default",
    "sql:default",
    "sql:allow-execute",
    "dialog:default",
    "fs:default",
    "fs:allow-write-text-file",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$DOWNLOAD/*"
        },
        {
          "path": "$DOCUMENT/*"
        }
      ]
    },
    "os:default"
  ]
}